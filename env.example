# OpenSIPS AI Voice Connector - Environment Configuration
# Copy this file to .env and configure your values

# ===== AI Services =====
VOSK_WEBSOCKET_URL=ws://vosk-server:8765
LLAMA_WEBSOCKET_URL=ws://llm-turkish-server:8765
LLAMA_MODEL=llama3.2-turkish
PIPER_WEBSOCKET_URL=ws://piper-tts-server:8000/tts

# ===== VAD Configuration (Turkish Optimized) =====
VAD_CONFIDENCE=0.2
VAD_START_SECS=0.05
VAD_STOP_SECS=0.4
VAD_MIN_VOLUME=0.1
VAD_SAMPLE_RATE=16000

# ===== RTP Configuration =====
RTP_MIN_PORT=35000
RTP_MAX_PORT=35100
# Host IP address that clients can reach (CRITICAL for Docker!)
# Set this to your machine's IP that the SIP client can access
RTP_HOST_IP=192.168.1.120

# ===== SIP Listener =====
SIP_HOST=0.0.0.0
SIP_PORT=8089

# ===== System Configuration =====
LOG_LEVEL=INFO
ENABLE_METRICS=true
DEBUG_MODE=false

# ===== Conversation AI =====
SYSTEM_MESSAGE=Sen yardımcı bir AI asistanısın. Türkçe konuş ve kısa, net cevaplar ver. Sesli görüşmede olduğumuzu unutma.
WELCOME_MESSAGE=Arayanı Türkçe selamla ve nasıl yardımcı olabileceğini sor.
LLM_MAX_TOKENS=150
LLM_TEMPERATURE=0.7 