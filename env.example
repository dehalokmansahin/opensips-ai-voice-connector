# OpenSIPS AI Voice Connector Environment Configuration
# Copy this file to .env and customize for your deployment

# =============================================================================
# OpenSIPS Configuration
# =============================================================================

# Management Interface (MI) - Used for OpenSIPS control
MI_IP=0.0.0.0
MI_PORT=8088

# Event Interface - Used for E_UA_SESSION events
EVENT_IP=0.0.0.0
EVENT_PORT=8089

# SIP Port - Main SIP signaling port
OS_SIP_PORT=5060

# =============================================================================
# Service Names (for Docker service discovery)
# =============================================================================

OPENSIPS_SERVICE_NAME=opensips
OAVC_SERVICE_NAME=opensips-ai-voice-connector

# =============================================================================
# RTP Media Configuration
# =============================================================================

# RTP port range for media streams
RTP_MIN_PORT=35000
RTP_MAX_PORT=35100

# RTP binding configuration
RTP_BIND_IP=0.0.0.0
RTP_IP=opensips-ai-voice-connector

# =============================================================================
# AI Services Configuration
# =============================================================================

# AI Service WebSocket URL
AI_SERVICE_URL=ws://ai-service:2700
AI_SERVICE_IMAGE=your-ai-service:latest
AI_MODEL_PATH=/models/default

# Text-to-Speech Service
TTS_SERVICE_URL=http://tts-service:8000
TTS_SERVICE_IMAGE=your-tts-service:latest
TTS_VOICE_MODEL=default

# Speech-to-Text Service
STT_SERVICE_URL=ws://stt-service:2701
STT_SERVICE_IMAGE=your-stt-service:latest
STT_MODEL_PATH=/models/whisper

# =============================================================================
# Logging and Debug Configuration
# =============================================================================

LOG_LEVEL=INFO
DEBUG_MODE=false

# =============================================================================
# Network Configuration
# =============================================================================

# Docker network subnet
DOCKER_SUBNET=172.20.0.0/16

# =============================================================================
# Performance Tuning
# =============================================================================

# OpenSIPS worker processes
UDP_WORKERS=4

# Transaction timeouts (seconds)
FR_TIMEOUT=10
FR_INV_TIMEOUT=30

# =============================================================================
# Security Configuration
# =============================================================================

# Enable/disable features
ENABLE_WEBSOCKET=true
ENABLE_TLS=false

# TLS Configuration (if enabled)
TLS_CERT_PATH=/etc/ssl/certs/opensips.crt
TLS_KEY_PATH=/etc/ssl/private/opensips.key

# =============================================================================
# Development/Testing Configuration
# =============================================================================

# Test mode settings
TEST_MODE=false
MOCK_AI_SERVICES=false

# CI/CD specific settings
CI_MODE=false
SKIP_HEALTH_CHECKS=false 