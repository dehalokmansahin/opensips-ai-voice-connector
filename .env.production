# Production Environment Configuration

# Service Ports
AI_VOICE_CONNECTOR_HTTP_PORT=8080
AI_VOICE_CONNECTOR_GRPC_PORT=50051
VAD_SERVICE_PORT=50052
ASR_SERVICE_PORT=50053
LLM_SERVICE_PORT=50054
TTS_SERVICE_PORT=50055
SESSION_MANAGER_PORT=50056
CONTEXT_STORE_PORT=50057
BANKING_SERVICE_PORT=50058

# OpenSIPS Configuration
OPENSIPS_SIP_PORT=5060
OPENSIPS_MI_PORT=8087
OPENSIPS_EVENT_PORT=8090

# Database Configuration (use external managed database in production)
POSTGRES_HOST=prod-postgres.internal
POSTGRES_PORT=5432
POSTGRES_DB=opensips_prod
POSTGRES_USER=opensips_prod
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}  # Set in secrets

# Redis Configuration (use external managed Redis in production)
REDIS_HOST=prod-redis.internal
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}  # Set in secrets

# AI Model Configurations
VAD_MODEL_PATH=/app/models/silero
ASR_MODEL_PATH=/app/models/vosk-tr
LLM_MODEL_PATH=/app/models/llama
TTS_MODEL_PATH=/app/models/piper-tr

# Logging
LOG_LEVEL=WARNING
LOG_FORMAT=json

# Performance Tuning (Production optimized)
VAD_CONFIDENCE=0.2
VAD_START_SECS=0.03
VAD_STOP_SECS=0.2
ASR_SAMPLE_RATE=16000
TTS_SAMPLE_RATE=22050
LLM_MAX_TOKENS=80
LLM_TEMPERATURE=0.1

# Security
TLS_ENABLED=true
TLS_CERT_PATH=/app/certs/server.crt
TLS_KEY_PATH=/app/certs/server.key

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_TRACING=true